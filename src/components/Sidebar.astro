---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
---

<aside class="hidden lg:flex lg:fixed lg:left-0 lg:top-0 lg:h-full lg:w-80 bg-primary lg:flex-col lg:p-12 lg:z-10">
	<div class="flex flex-col items-start h-full" style="padding-top: calc(15vh); padding-bottom: calc(15vh);">
		<!-- Logo - aligned with gallery image start -->
		<div class="mb-8">
			<Image src={logo} alt="Photography Logo" class="w-20 h-auto" />
		</div>

		<!-- Typography Section -->
		<div class="mb-8">
			<h2 class="text-sm font-semibold text-primary mb-4 tracking-wide uppercase">PJ ARTS</h2>
			<div class="text-sm text-secondary space-y-1">
				<div class="text-muted italic">Clients friendly</div>
			</div>
		</div>
		
		<!-- Navigation Menu -->
		<nav class="space-y-3 text-sm flex-1">
			<a href="/" class="block text-primary hover:text-accent transition-colors cursor-pointer">
				Home
			</a>
			<a href="/weddings" class="block text-primary hover:text-accent transition-colors cursor-pointer">
				Weddings
			</a>
			<a href="/clubbing" class="block text-primary hover:text-accent transition-colors cursor-pointer">
				Clubbing
			</a>
			<a href="/baptism" class="block text-primary hover:text-accent transition-colors cursor-pointer">
				Baptism
			</a>
			<a href="/arts" class="block text-primary hover:text-accent transition-colors cursor-pointer">
				Arts
			</a>
			<a href="/about" class="block text-primary hover:text-accent transition-colors cursor-pointer">
				About
			</a>
			<a href="/contact" class="block text-primary hover:text-accent transition-colors cursor-pointer">
				Contact
			</a>
		</nav>

		<!-- Footer - aligned with gallery image end -->
		<div class="text-xs text-muted">
			<div class="mb-4">
				All these images and projections of<br>
				myself belonged in 2025
			</div>
			
			<!-- Social Icons -->
			<div class="flex space-x-3">
				<div class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center">
					<span class="text-primary text-xs">f</span>
				</div>
				<div class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center">
					<span class="text-primary text-xs">i</span>
				</div>
				<div class="w-6 h-6 bg-secondary rounded-full flex items-center justify-center">
					<span class="text-primary text-xs">t</span>
				</div>
			</div>
		</div>
	</div>
</aside>

<!-- Mobile Menu Overlay -->
<div 
	id="mobile-menu" 
	class="lg:hidden fixed inset-0 bg-primary z-50 transform -translate-x-full transition-transform duration-300 ease-in-out"
>
	<div class="flex flex-col p-8 h-full">
		<div class="mb-12">
			<img src="/src/assets/logo.png" alt="Photography Logo" class="w-20 h-auto" />
		</div>
		
		<nav class="space-y-6 text-lg">
			<a href="/" class="block text-primary hover:text-accent transition-colors">
				Home
			</a>
			<a href="/weddings" class="block text-primary hover:text-accent transition-colors">
				Weddings
			</a>
			<a href="/clubbing" class="block text-primary hover:text-accent transition-colors">
				Clubbing
			</a>
			<a href="/baptism" class="block text-primary hover:text-accent transition-colors">
				Baptism
			</a>
			<a href="/arts" class="block text-primary hover:text-accent transition-colors">
				Arts
			</a>
			<a href="/about" class="block text-primary hover:text-accent transition-colors">
				About
			</a>
			<a href="/contact" class="block text-primary hover:text-accent transition-colors">
				Contact
			</a>
		</nav>
	</div>
</div>